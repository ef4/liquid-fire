<button type="button" {{on "click" (fn this.toggle "showA")}}>Toggle A/B</button>
<button type="button" {{on "click" (fn this.toggle "showOne")}}>Toggle One/Two</button>

{{#liquid-if predicate=this.showOne class="nested-explode-transition-scenario"}}
  <div class="child">
    {{#liquid-if predicate=this.showA use="toLeft"}}
      <div class="child-one-a">One: A</div>
    {{else}}
      <div class="child-one-b">One: B</div>
    {{/liquid-if}}
  </div>
{{else}}
  <div class="child child-two">
    Two
  </div>
{{/liquid-if}}
