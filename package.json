{
  "name": "liquid-fire",
  "version": "0.0.0",
  "private": true,
  "repository": "https://github.com/ember-animation/liquid-fire",
  "license": "MIT",
  "author": "Edward Faulkner <ef@alum.mit.edu>",
  "scripts": {
    "build": "npm run build --workspace liquid-fire",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "prepare": "npm run build",
    "start": "concurrently 'npm:start:*' --restart-after 5000 --prefix-colors cyan,white,yellow",
    "start:addon": "npm start --workspace liquid-fire -- --no-watch.clearScreen",
    "start:docs": "npm start --workspace docs",
    "start:test-app": "npm start --workspace test-app",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "concurrently": "^7.2.1",
    "prettier": "^2.5.1"
  },
  "workspaces": [
    "docs",
    "liquid-fire",
    "test-app"
  ],
  "volta": {
    "node": "16.19.0",
    "yarn": "1.22.10"
  },
  "engines": {
    "node": "16.* || >= 18"
  }
}